<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SignUp.BienvenidaFragment"
    android:padding="24dp">

    <ImageButton
        android:id="@+id/arrowbacksignup"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/arrow_back"
        android:background="@android:color/transparent"
        android:elevation="4dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/barra_registro"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/barra_registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bienvenido_barra"
        app:layout_constraintTop_toBottomOf="@id/arrowbacksignup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/bienvenida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Te damos la bienvenida!"
        android:fontFamily="@font/montserratlight"
        android:textColor="#4ED7F1"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/barra_registro"
        android:layout_marginTop="100dp"/>

    <ImageView
        android:id="@+id/manosLocales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logomanoslocales"
        app:layout_constraintTop_toBottomOf="@id/bienvenida"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/parrafo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ofrecemos una aplicación para descubrir, seguir y contactar a productores y emprendedores locales. \n\n Fomentamos el consumo regional, el contacto directo y la promoción de productos auténticos. "
        android:fontFamily="@font/montserratlight"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/manosLocales"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:lineSpacingExtra="8dp"
        android:textSize="14dp"
        android:paddingHorizontal="10dp"
        />

    <Button
        android:id="@+id/buttonCompletarTusDatos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Completa tus datos"
        android:background="@drawable/background_gradient_button"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:fontFamily="@font/montserratsemibold"
        app:layout_constraintTop_toBottomOf="@id/parrafo"/>




</androidx.constraintlayout.widget.ConstraintLayout>