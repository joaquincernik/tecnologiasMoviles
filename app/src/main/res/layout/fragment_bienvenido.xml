<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.BienvenidaFragment"
    android:padding="24dp">

    <ImageButton
        android:id="@+id/arrowbacksignup"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/arrow_back"
        android:background="@android:color/transparent"
        android:elevation="4dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/barra_bienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bienvenido_barra_2"
        app:layout_constraintTop_toBottomOf="@id/arrowbacksignup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/bienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/bienvenido"
        app:layout_constraintTop_toBottomOf="@id/barra_bienvenido"
        android:layout_marginTop="190dp"/>


    <TextView
        android:id="@+id/parrafo_bienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserratregular"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bienvenido"
        android:text="Miles de emprendimientos. Decenas de miles de productos. Todo en un solo lugar."
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:lineSpacingExtra="8dp"
        android:textSize="19sp"/>

    <Button
        android:id="@+id/button_ir_a_pantalla_principal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Ir a pantalla principal"
        android:background="@drawable/background_gradient_button"
        android:textColor="@android:color/white"
        android:fontFamily="@font/montserratsemibold"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textAllCaps="false"
        android:layout_marginBottom="40dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>